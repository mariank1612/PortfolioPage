---
import resume from '../../resume.json';

const { skills } = resume;

const sectionTitles: Record<string, string> = {
    automation_ai: 'Automation & AI',
    data_bi: 'Data & BI',
    sap_erp: 'SAP ERP',
    project_management: 'Project Management'
};

const categories = Object.keys(skills) as Array<keyof typeof skills>;
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {categories.map((category) => (
        <div class="p-6 border border-white/10 rounded-lg hover:border-accent/30 transition-colors bg-white/5">
            <h3 class="text-xl font-semibold text-slate-200 mb-4">{sectionTitles[category] || category}</h3>
            <ul class="flex flex-wrap gap-2">
                {skills[category].map((skill: string) => (
                    <li class="px-3 py-1 text-sm font-mono tracking-normal rounded-full bg-teal-400/20 text-[#9fcee0] border border-teal-400/30">
                        {skill}
                    </li>
                ))}
            </ul>
        </div>
    ))}
</div>
